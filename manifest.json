{
  "manifest_version": 2,

  "name": "Calhacks",
  "description": "This extension ranks the bias of an article and its author.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [ {
    "js": [ "jquery-3.1.1.min.js", "bootstrap.min.js", "article-detection.js"],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' http://api.diffbot.com/v3/; object-src 'self'"
}
